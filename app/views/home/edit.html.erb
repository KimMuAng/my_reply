<div class="container">
<h2>게시글 수정</h2>
<form action = "/update/<%=@e_post.id%>" method = "POST">
  <div class="form-group">
    <label for="title">제목</label>
    <input type="text" name="title" class="form-control" value="<%=@e_post.title%>" id="title" placeholder="제목을 입력하세요.">
  </div>
  <div class="form-gorup">
    <label for="editor">작성자</label>
    <input type="text" name="editor" class="form-control" value="<%=@e_post.editor%>" id="editor">
  </div>
  <div class="form-group">
    <label for="erxampleFormControlTextarea1">내용</label>
    <textarea class="form-control" name="content" rows="6"><%=@e_post.content%></textarea>
  </div>
  <button type="submit" class="btn btn-primary">완 료</button>
</form>
</div>